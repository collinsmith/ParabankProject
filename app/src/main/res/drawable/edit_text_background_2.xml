<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="4dp"/>
                    <gradient
                        android:angle="270"
                        android:startColor="@color/white"
                        android:centerColor="@color/white"
                        android:endColor="@color/parasoft_gold"
                        />
                </shape>
            </item>
            <item android:left="@dimen/border_width" android:top="@dimen/border_width" android:bottom="@dimen/border_width" android:right="@dimen/border_width">
                <shape>
                    <solid android:color="@color/white"/>
                    <corners android:radius="4dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
