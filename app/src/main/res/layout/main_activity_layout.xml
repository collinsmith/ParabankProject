<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:baselineAligned="false"
	android:background="@color/parabank_background"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >

        <include layout="@layout/parabank_banner_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/parabank_banner_height"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:gravity="top|left"
            android:padding="10dp"
        >
            <TextView
                style="@style/style_textview"
                android:text="@string/account_info"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/light_grey"
                android:gravity="top|left"
                android:padding="10dp"
                >
                <TextView
                    style="@style/style_textview"
                    android:id="@+id/tvFullName"
                    />

                <TextView
                    style="@style/style_textview"
                    android:id="@+id/tvAddress"
                    />
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/http_query_listview_layout"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/border_width"
        android:background="@color/border_color"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom|center"
        android:background="@android:color/transparent"
        android:padding="5dp"
        >
        <ImageButton
            style="@style/style_imagebutton"
            android:layout_height="48dp"
            android:layout_width="48dp"
            android:scaleType="fitXY"
            android:id="@+id/btnLogout"
            android:src="@mipmap/ic_action_logout"
            />
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            />
        <ImageButton
            style="@style/style_imagebutton"
            android:layout_height="48dp"
            android:layout_width="48dp"
            android:scaleType="fitXY"
            android:id="@+id/btnEditAccountInfo"
            android:src="@mipmap/ic_action_edit"
            />
    </LinearLayout>
</LinearLayout>