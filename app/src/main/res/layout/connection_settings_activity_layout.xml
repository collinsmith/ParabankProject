<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:background="@color/parabank_background"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="top|left"
                android:padding="10dp"
                >
                <include layout="@layout/parabank_banner_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/parabank_banner_height"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    />
                <TextView
                    style="@style/style_textview"
                    android:text="@string/host"
                    android:labelFor="@+id/username"
                />
                <EditText
                    style="@style/style_edittext"
                    android:id="@+id/etHost"
                    android:hint="@string/example_host"
                    android:layout_marginBottom="@dimen/login_component_spacing"
                    android:inputType="textUri"
                />
                <TextView
                    style="@style/style_textview"
                    android:text="@string/port"
                    android:labelFor="@+id/etPort"
                />
                <EditText
                    style="@style/style_edittext"
                    android:id="@+id/etPort"
                    android:hint="@string/example_port"
                    android:inputType="number"
                    android:layout_marginBottom="@dimen/login_component_spacing"
                />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/border_width"
        android:background="@drawable/bottom_actionbar"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom|center"
        android:background="@color/bottom_actionbar_background"
        >
        <ImageButton
            style="@style/style_imagebutton"
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:scaleType="fitXY"
            android:id="@+id/btnRejectChanges"
            android:src="@mipmap/ic_action_cancel"
            android:padding="5dp"
            android:cropToPadding="true"
            android:tint="@color/bottom_actionbar_button_no"
            android:tintMode="src_in"
            />
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            />
        <ImageButton
            style="@style/style_imagebutton"
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:scaleType="fitXY"
            android:id="@+id/btnAcceptChanges"
            android:src="@mipmap/ic_action_accept"
            android:padding="5dp"
            android:cropToPadding="true"
            android:tint="@color/bottom_actionbar_button_yes"
            android:tintMode="src_in"
            />
    </LinearLayout>
</LinearLayout>