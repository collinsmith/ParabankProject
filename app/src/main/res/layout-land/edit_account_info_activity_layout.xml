<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:background="@color/parabank_background"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:gravity="top|left"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="top|left"
                android:padding="10dp"
                >
                <include layout="@layout/parabank_banner_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/parabank_banner_height"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginRight="5dp">
                        <TextView
                            style="@style/style_textview"
                            android:text="@string/username"
                            android:labelFor="@+id/etUsername"
                            />
                        <EditText
                            style="@style/style_edittext"
                            android:id="@+id/etUsername"
                            android:layout_marginBottom="@dimen/login_component_spacing"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            style="@style/style_textview"
                            android:text="@string/password"
                            android:labelFor="@+id/etPassword"
                            />
                        <EditText
                            style="@style/style_edittext"
                            android:id="@+id/etPassword"
                            android:hint="@string/unchanged"
                            android:layout_marginBottom="@dimen/login_component_spacing"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginRight="5dp">
                        <TextView
                            style="@style/style_textview"
                            android:text="@string/firstName"
                            android:labelFor="@+id/etFirstName"
                            />
                        <EditText
                            style="@style/style_edittext"
                            android:id="@+id/etFirstName"
                            android:inputType="textPersonName"
                            android:layout_marginBottom="@dimen/login_component_spacing"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            style="@style/style_textview"
                            android:text="@string/lastName"
                            android:labelFor="@+id/etLastName"
                            />
                        <EditText
                            style="@style/style_edittext"
                            android:id="@+id/etLastName"
                            android:inputType="textPersonName"
                            android:layout_marginBottom="@dimen/login_component_spacing"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginRight="5dp">
                        <TextView
                            style="@style/style_textview"
                            android:text="@string/phoneNumber"
                            android:labelFor="@+id/etPhoneNumber"
                            />
                        <EditText
                            style="@style/style_edittext"
                            android:id="@+id/etPhoneNumber"
                            android:inputType="phone"
                            android:layout_marginBottom="@dimen/login_component_spacing"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            style="@style/style_textview"
                            android:text="@string/ssn"
                            android:labelFor="@+id/etSSN"
                            />
                        <EditText
                            style="@style/style_edittext"
                            android:id="@+id/etSSN"
                            android:inputType="number"
                            android:layout_marginBottom="@dimen/login_component_spacing"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginRight="5dp">
                        <TextView
                            style="@style/style_textview"
                            android:text="@string/street"
                            android:labelFor="@+id/etStreet"
                            />
                        <EditText
                            style="@style/style_edittext"
                            android:id="@+id/etStreet"
                            android:layout_marginBottom="@dimen/login_component_spacing"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            style="@style/style_textview"
                            android:text="@string/city"
                            android:labelFor="@+id/etCity"
                            />
                        <EditText
                            style="@style/style_edittext"
                            android:id="@+id/etCity"
                            android:layout_marginBottom="@dimen/login_component_spacing"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginRight="5dp">
                        <TextView
                            style="@style/style_textview"
                            android:text="@string/state"
                            android:labelFor="@+id/etState"
                            />
                        <EditText
                            style="@style/style_edittext"
                            android:id="@+id/etState"
                            android:layout_marginBottom="@dimen/login_component_spacing"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            style="@style/style_textview"
                            android:text="@string/zipCode"
                            android:labelFor="@+id/etZipCode"
                            />
                        <EditText
                            style="@style/style_edittext"
                            android:id="@+id/etZipCode"
                            android:inputType="number"
                            android:layout_marginBottom="@dimen/login_component_spacing"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <include layout="@layout/bottom_actionbar_layout"/>
</LinearLayout>